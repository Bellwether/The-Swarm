<% content_for :right_header do %>
  <%= link_to 'Send Messsage', new_campaign_message_path(@campaign), 'data-theme' => 'a', 'data-icon' => 'plus', 'class' => 'ui-btn-right' %>
<% end %>

<div class="ui-body ui-body-a">
  <h1>Campaign: <%= @campaign.name %></h1>
  <div class="ui-body ui-body-b">
    <h4>Messages Sent: 0</h4>	
  </div>

  <h2>Contacts:</h2>
  <ul data-role="listview" data-theme="d" data-inset="true">
	<% if @subscriptions %>
      <%= render @subscriptions %>
    <% else %>
      <li data-role="list-divider">No subscribed contacts</li>
    <% end %>
  </ul>

  <%= form_for(@campaign, :method => :delete) do |f| %>
    <p><%= f.submit 'Delete Campaign and Subscriptions', 'data-inline' => true, 'data-icon' => 'delete' %></p>
  <% end %>
</div>