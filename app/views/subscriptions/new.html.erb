<div class="ui-body ui-body-a">
  <h1>New Subscription <%= @contact.name ? "for #{@contact.name}" : '' %></h1>

  <%= form_for [@contact, @subscription] do |f| %>
    <%= f.label :protocol, 'Campaign' %>
    <%= select(:subscription, :campaign_id, @campaigns.collect {|m| [ m.name, m.id ] }, {:include_blank => true}, 
                        {'data-native-menu' => false, 'data-placeholder' => true}) %>
	
	<%= f.hidden_field :protocol %>
    <p><%= f.submit 'Save', 'data-icon' => 'check' %></p>
  <% end %>
  <br />
</div>
<%= render "layouts/partials/validation_errors", :model => @subscription %>